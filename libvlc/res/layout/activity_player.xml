<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8000">
    <!--错误提示-->
    <RelativeLayout
        android:id="@+id/error_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#000000">
        <TextView
            android:id="@+id/error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:text="网络未连接，请检测网络设置"/>

        <TextView
            android:id="@+id/error_btn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/error_tv"
            android:text="点此重试"
            android:textColor="#165412"
            android:gravity="center"
            android:background="@drawable/ic_error_btn"/>
    </RelativeLayout>

    <org.videolan.libvlc.media.VideoView
        android:id="@+id/pv_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />

    
        <RelativeLayout
        android:id="@+id/rl_title"
        android:background="#8000"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:padding="3dp">
            <RelativeLayout
                android:id="@+id/rl_back_left"
                android:layout_width="50dp"
                android:layout_height="35dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/arrow_left"/>
            </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/rl_back_left"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:maxLength="25"
            android:ellipsize="end"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text=""/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_overlay"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#8000"
        android:orientation="vertical"

         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ib_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_pause"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/ib_forward"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_forward_w"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:text="00:00"/>

            <SeekBar
                android:id="@+id/sb_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="2dip"
                android:minHeight="2dip"
                android:gravity="center_vertical"
                android:progressDrawable="@drawable/po_seekbar"
                android:thumb="@drawable/seekbar_thumb"
                android:indeterminate="false" />

            <com.longrise.vlc.player.widget.CustomSeekBar
                android:id="@+id/sb_custom_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="2dip"
                android:minHeight="2dip"
                android:gravity="center_vertical"
                android:progressDrawable="@drawable/po_seekbar"
                android:thumb="@drawable/seekbar_thumb"
                android:indeterminate="false"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:text="00:00"/>
            <!--清晰度-->
            <TextView
                android:id="@+id/tv_articulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:text="标清"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/tv_buffer"
            android:layout_marginTop="2dp"
            android:background="#8000"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>